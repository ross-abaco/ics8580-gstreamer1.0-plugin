ICS8580_VIDEO_RESOLUTION_1080I_60=8
ICS8580_VIDEO_RESOLUTION_1080P_24=9
ICS8580_VIDEO_RESOLUTION_1080P_25=10
ICS8580_VIDEO_RESOLUTION_1080P_30=11
ICS8580_VIDEO_RESOLUTION_1080P_60=12
ICS8580_VIDEO_RESOLUTION_UXGA_60=29
ICS8580_VIDEO_RESOLUTION_WUXGA_60=30

ICS8580_VIDEO_INPUT1_SD_HD_RGBHV_DVI=1
ICS8580_VIDEO_INPUT2_SD_HD_RGBHV=2
ICS8580_VIDEO_INPUT3_SD=3
ICS8580_VIDEO_INPUT4_SD=4
