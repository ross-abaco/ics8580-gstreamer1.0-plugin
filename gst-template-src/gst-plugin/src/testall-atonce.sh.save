frames=500

echo Lanuching Input 3
bash -c "gst-launch-1.0 8580src \
	input=$ICS8580_VIDEO_INPUT3_SD \
	type=$ICS8580_VIDEO_TYPE_COMPOSITE \
	res=$ICS8580_VIDEO_RESOLUTION_PAL channel=1 ! \
	\"video/x-raw, width=720, height=576\" ! timeoverlay ! \
	textoverlay font-desc=\"Sans 26\" text=\"PAL Video Input 3 ICS-8580\" \
	shaded-background=true auto-resize=false  ! xvimagesink" &
sleep 2
echo Lanuching Input 4
bash -c "gst-launch-1.0 8580src \
	input=$ICS8580_VIDEO_INPUT4_SD \
	type=$ICS8580_VIDEO_TYPE_COMPOSITE \
	res=$ICS8580_VIDEO_RESOLUTION_PAL channel=2 ! \
	\"video/x-raw, width=720, height=576\" ! timeoverlay ! \
	textoverlay font-desc=\"Sans 26\" text=\"PAL Video Input 4 ICS-8580\" \
	shaded-background=true auto-resize=false  ! xvimagesink" &
sleep 2 
